<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:paddingRight="20dp"

        android:textColor="@color/white"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:paddingRight="20dp"

        android:textColor="@color/outputColor"
        android:textSize="80dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttons_palete" />






    <androidx.cardview.widget.CardView
        android:id="@+id/buttons_palete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/primaryColor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_palate_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            >
            <LinearLayout
                android:id="@+id/button_row_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/secondaryColor"
                android:gravity="center_horizontal"
                >


                <ImageView
                    android:id="@+id/btn_ac"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_ac"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />

                <ImageView
                    android:id="@+id/btn_start_bracket"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_start_bracket"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_module"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_module"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_divide"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_divide"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/button_row_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/secondaryColor"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/btn_7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_7"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_8"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_8"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_9"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_9"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_multiplication"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_multiplication"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />



            </LinearLayout>




            <LinearLayout
                android:id="@+id/button_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/secondaryColor"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/btn_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_4"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_5"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_6"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


                <ImageView
                    android:id="@+id/btn_minus"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_minus"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    />


            </LinearLayout>




            <LinearLayout
                android:id="@+id/button_row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/secondaryColor"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/btn_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


                <ImageView
                    android:id="@+id/btn_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


                <ImageView
                    android:id="@+id/btn_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_3"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/btn_plus"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_plus"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/button_row_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/secondaryColor"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/btn_end_bracket"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_end_bracket"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/btn_0"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


                <ImageView
                    android:id="@+id/btn_dot"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_dot"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


                <ImageView
                    android:id="@+id/btn_equal"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_equal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>